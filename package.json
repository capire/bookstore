{
  "name": "@capire/bookstore",
  "version": "2.0.1",
  "description": "Shows how to reuse and compose with CAP.",
  "repository": "https://github.com/capire/bookstore",
  "dependencies": {
    "@capire/bookshop": "*",
    "@capire/reviews": "*",
    "@capire/orders": "*",
    "@capire/common": "*",
    "@capire/data-viewer": "*",
    "@cap-js/hana": ">=1",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap/cds": ">=5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": ">=1"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch"
  },
  "cds": {
    "requires": {
      "ReviewsService": {
        "service": "sap.capire.reviews.api.ReviewsService",
        "model": "@capire/reviews",
        "kind": "odata"
      },
      "OrdersService": {
        "service": "sap.capire.orders.api.OrdersService",
        "model": "@capire/orders",
        "kind": "odata"
      },
      "messaging": true,
      "db-ext": {
        "[development]": {
          "model": "db/sqlite"
        },
        "[production]": {
          "model": "db/hana"
        }
      }
    },
    "log": { "service": true }
  }
}
